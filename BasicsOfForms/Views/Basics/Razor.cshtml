
@{
    ViewBag.Title = "Razor";
}

<h2>Razor</h2>

@using (Html.BeginForm("Razor", "Basics", FormMethod.Get, new { @class = "form-horizontal", role= "form} ))
{
    @Html.AntiForgeryToken()

    @Html.TextBox("email")
    @Html.Password("password")
    #Html.Password("passwordConfirmation")
    <input type="submit" class=" btn btn-default" value="SUBMIT!"/>
}